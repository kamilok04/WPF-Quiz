<Window x:Class="GeneratorQuiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:GeneratorQuiz"
        xmlns:vm="clr-namespace:GeneratorQuiz.ViewModel"
        mc:Ignorable="d"
        Title="Generator Quizu" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
     </Window.Resources>
    
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="50px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Generator Quizu" FontSize="25" TextAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_load" Content="Wczytaj quiz" Grid.Column="1" FontSize="14" Margin="10"/>
            <Button x:Name="btn_create" Content="Utwórz nowy quiz" FontSize="14" Margin="10" Command="{Binding CreateNewQuiz}"/>
        </Grid>

        <Grid Grid.Row="2" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1px 0 0 0" >
                <Grid  Margin="5 0 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="50px"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.RowSpan="2" >
                        <TextBlock Text="Dane quizu" TextAlignment="Center" FontSize="18"/>
                        <TextBlock Text="Nazwa:"  FontSize="14" Margin="0 5"/>
                        <TextBox x:Name="tbox_name" FontSize="14" Text="" />
                        <TextBlock Text="Pytania:"  FontSize="14" Margin="0 5"/>
                        <ListBox x:Name="lb_questions"/>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btn_save" Content="Zapisz" Grid.Column="1" FontSize="14" Margin="10"/>
                    </Grid>
                </Grid>
            </Border>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="50px"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="5 0">
                    <TextBlock Text="Edytor pytań" TextAlignment="Center" FontSize="18"/>
                    <TextBlock Text="Pytanie:" FontSize="16"/>
                    <TextBox x:Name="tbox_question" FontSize="16" Margin="0 5" Text="{Binding Question}"/>
                    <TextBlock Text="Odpowiedź nr 1" FontSize="14"/>
                    <TextBox x:Name="tbox_answer1" FontSize="14" Margin="0 5" Text="{Binding Answer1}"/>
                    <CheckBox x:Name="ckbox_answer1" FontSize="14" Content="Czy odpowiedź jest poprawna?" Margin="0 0 0 5" IsChecked="{Binding A1IsTrue}"/>
                    <TextBlock Text="Odpowiedź nr 2" FontSize="14" />
                    <TextBox x:Name="tbox_answer2" FontSize="14" Margin="0 5" Text="{Binding Answer2}"/>
                    <CheckBox x:Name="ckbox_answer2" FontSize="14" Content="Czy odpowiedź jest poprawna?"  Margin="0 0 0 5" IsChecked="{Binding A2IsTrue}"/>
                    <TextBlock Text="Odpowiedź nr 3" FontSize="14"/>
                    <TextBox x:Name="tbox_answer3" FontSize="14" Margin="0 5" Text="{Binding Answer3}"  />
                    <CheckBox x:Name="ckbox_answer3" FontSize="14" Content="Czy odpowiedź jest poprawna?"  Margin="0 0 0 5" IsChecked="{Binding A3IsTrue}"/>
                    <TextBlock Text="Odpowiedź nr 4" FontSize="14"/>
                    <TextBox x:Name="tbox_answer4" FontSize="14" Margin="0 5" Text="{Binding Answer4}"/>
                    <CheckBox x:Name="ckbox_answer4" FontSize="14" Content="Czy odpowiedź jest poprawna?"  Margin="0 0 0 5" IsChecked="{Binding A4IsTrue}"/>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btn_add" Content="Dodaj" FontSize="14" Margin="10" Command="{Binding AddQuestion}"/>
                    <Button x:Name="btn_delete" Content="Usuń" Grid.Column="1" FontSize="14" Margin="10"/>
                    <Button x:Name="btn_edit" Content="Edytuj" Grid.Column="2" FontSize="14" Margin="10"/>
                    
                </Grid>


            </Grid>


        </Grid>
    </Grid>
</Window>
